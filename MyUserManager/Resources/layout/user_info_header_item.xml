<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
    android:padding="@dimen/content_padding">
    <TextView
        android:id="@+id/text_view_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/list_header_text_size"
        android:text="@string/user_name_text"/>
    <TextView
        android:id="@+id/text_view_header_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/list_header_text_size"
        android:text="@string/user_password_text"/>
</RelativeLayout>